<Window x:Name="window" x:Class="WpfAppGameTesing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppGameTesing"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" Loaded="window_Loaded">
    <Grid x:Name="gameGrid" Cursor="Hand">
        <Canvas x:Name="gameCanvas" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="630" MouseLeftButtonDown="gameCanvas_MouseLeftButtonDown">
            <Image  Height="670" Width="950" Stretch="Fill" />
        </Canvas>
        <Button x:Name="b" Content="Button" HorizontalAlignment="Left" Margin="1115,30,0,0" VerticalAlignment="Top" Width="55" MouseDoubleClick="b_MouseDoubleClick" Click="b_Click" Height="45" LostFocus="b_LostFocus" MouseMove="b_MouseMove"/>
        <Button x:Name="b_Copy" Content="Button" HorizontalAlignment="Left" Margin="1190,30,0,0" VerticalAlignment="Top" Width="55" MouseDoubleClick="b_MouseDoubleClick" Height="45" RenderTransformOrigin="0.455,0.556"/>
        <StackPanel HorizontalAlignment="Left" Height="304" Margin="1000,375,0,0" VerticalAlignment="Top" Width="272">
            <Label x:Name="LabelTowerInfo" Content="Label" Cursor="Hand" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" FontSize="12"/>
            <Label x:Name="LabelTowercost" Content="Label" Cursor="Hand" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" FontSize="12"/>
            <Label x:Name="LabelTowerDamage" Content="Label" Cursor="Hand" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" FontSize="12"/>
            <Label x:Name="LabelTowerAttackSpeed" Content="Label" Cursor="Hand" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" FontSize="12"/>

            <Label x:Name="LabelTowerRange" Content="Label" Cursor="Hand" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" FontSize="12"/>
            <!--<DockPanel >
                <Label  Content="Label" Width="95" Cursor="Hand" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" FontSize="12"/>
                <Button Width="70" Visibility="Hidden"/>
                <Label  Content="Label" Width="142" Cursor="Hand" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" FontSize="12"/>
            </DockPanel>
            <DockPanel >
                <Button Height="45" HorizontalAlignment="Right" Width="95" />
                <Button Width="70" Visibility="Hidden"></Button>
                <Button Height="45" HorizontalAlignment="Left" Width="95" />
            </DockPanel>-->
            <Grid Height="125">
                <Label Content="cost to upgrade Attack speed " HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" FontSize="10"/>
                <Button Name="AttackSpeedButton" Content="987$" HorizontalAlignment="Left" Margin="145,0,0,0" VerticalAlignment="Top" Width="117" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" Foreground="#FF7CEC7C" BorderBrush="#FFFBE6E6" Background="White"/>
                <Label Content="cost to upgrade Damage " HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" FontSize="10" Margin="0,34,0,0"/>
                <Button Name="DamageButton" Content="987$" HorizontalAlignment="Left" Margin="145,35,0,0" VerticalAlignment="Top" Width="117" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" Foreground="#FF7CEC7C" BorderBrush="#FFFBE6E6" Background="White"/>

                <Label Content="cost to upgrade range " HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" FontSize="10" Margin="0,34,0,0"/>
                <Button Name="RangeButton" Content="987$" HorizontalAlignment="Left" Margin="145,35,0,0" VerticalAlignment="Top" Width="117" FontFamily="/GameClient-12.01.2020;component/Fonts/#Caesar Dressing" Foreground="#FF7CEC7C" BorderBrush="#FFFBE6E6" Background="White"/>

            </Grid>





        </StackPanel>

    </Grid>
</Window>
